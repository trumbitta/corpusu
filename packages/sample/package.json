{
  "name": "@corpusu/sample",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "nx": {
    "name": "sample",
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "options": {
          "platform": "node",
          "outputPath": "packages/sample/dist",
          "format": [
            "esm"
          ],
          "bundle": false,
          "main": "packages/sample/src/main.tsx",
          "tsConfig": "packages/sample/tsconfig.app.json",
          "assets": [
            "packages/sample/src/assets",
            {
              "glob": "**/*",
              "input": "packages/core/src/data/characters",
              "output": "characters"
            }
          ],
          "esbuildOptions": {
            "sourcemap": true,
            "outExtension": {
              ".js": ".js"
            }
          }
        },
        "configurations": {
          "development": {},
          "production": {
            "esbuildOptions": {
              "sourcemap": false,
              "outExtension": {
                ".js": ".js"
              }
            }
          }
        }
      },
      "prune-lockfile": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "executor": "@nx/js:prune-lockfile",
        "outputs": [
          "{workspaceRoot}/packages/sample/dist/package.json",
          "{workspaceRoot}/packages/sample/dist/package-lock.json"
        ],
        "options": {
          "buildTarget": "build"
        }
      },
      "copy-workspace-modules": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "outputs": [
          "{workspaceRoot}/packages/sample/dist/workspace_modules"
        ],
        "executor": "@nx/js:copy-workspace-modules",
        "options": {
          "buildTarget": "build"
        }
      },
      "prune": {
        "dependsOn": [
          "prune-lockfile",
          "copy-workspace-modules"
        ],
        "executor": "nx:noop"
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "sample:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "sample:build:development"
          },
          "production": {
            "buildTarget": "sample:build:production"
          }
        }
      }
    }
  },
  "dependencies": {
    "@corpusu/core": "*",
    "@corpusu/engine": "*",
    "ink": "^6.5.1",
    "ink-big-text": "^2.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.6",
    "tsx": "^4.20.6"
  },
  "scripts": {
    "build:ui": "tsc --project tsconfig.app.json",
    "run:ui": "node dist/tui.js"
  }
}
